{
  "name": "bootstrap-ts-lib",
  "version": "1.0.0",
  "description": "The purpose of this repository is to provide a foundation for quickly starting new library projects in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
    "doc": "npx compodoc -c compodoc.json",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "library",
    "bootstrap",
    "template",
    "MIT"
  ],
  "author": {
    "name": "Leonardo Henrique Ferreira",
    "email": "contato@leonardohenriqueferreira.com",
    "url": "https://leonardohenriqueferreira.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@compodoc/compodoc": "^1.1.25",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.1",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint 'src/**/*.{js,ts}' --fix"
  }
}
